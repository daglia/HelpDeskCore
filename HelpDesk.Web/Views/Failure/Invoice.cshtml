@model HelpDesk.Models.ViewModels.FailureViewModel
@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pageheader hidden-xs">
    <h3><i class="fa fa-home"></i> Fatura </h3>
</div>
<!--Page content-->
<!--===================================================-->
<div id="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div class="panel-body">
                    <div class="invoice-wrapper">
                        <section class="invoice-container">
                            <div class="invoice-inner">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <h3>Fatura</h3>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <h3>Arıza #@Model.FailureId</h3>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-xs-6">
                                        <address>
                                            <strong>Sayın:</strong><br />
                                            @(Model.ClientName + " " + Model.ClientSurname)<br />
                                            @Model.Address
                                        </address>
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        @*<address>
                                                <strong>Shipped To:</strong><br />
                                                Jane Smith<br />
                                                1234 Main<br />
                                                Apt. 4B<br />
                                                Springfield, ST 54321
                                            </address>*@
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6">
                                        @*<strong>Payment Method:</strong>
                                            <br /> Visa ending **** 4242
                                            <br /> jsmith@email.com*@
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <strong>İşlem Tarihi:</strong>
                                        <br /> @Model.FinishingTime
                                        <br />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 pad-top">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">İşlem Özeti</h3>
                                            </div>
                                            <div class="panel-body">
                                                <div class="table-responsive">
                                                    <table class="table table-condensed">
                                                        <thead>
                                                            <tr>
                                                                <td><strong>Arıza Adı</strong></td>
                                                                <td class="text-center"><strong>Ürün Modeli</strong></td>
                                                                <td class="text-right"><strong>Servis Bedeli</strong></td>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td>@Model.FailureName</td>
                                                                <td class="text-center">@Model.ProductModel</td>
                                                                <td class="text-right">@($"{Model.Price:c2}")</td>
                                                            </tr>
                                                            <tr>
                                                                <td class="thick-line"></td>
                                                                <td class="thick-line"></td>
                                                                <td class="thick-line text-center"><strong>Aratoplam</strong></td>
                                                                <td class="thick-line text-right">@($"{Model.Price:c2}")</td>
                                                            </tr>
                                                            <tr>
                                                                <td class="no-line"></td>
                                                                <td class="no-line"></td>
                                                                <td class="no-line text-center"><strong>Ek Ödemeler</strong></td>
                                                                <td class="no-line text-right">0₺</td>
                                                            </tr>
                                                            <tr>
                                                                <td class="no-line"></td>
                                                                <td class="no-line"></td>
                                                                <td class="no-line text-center"><strong>Toplam</strong></td>
                                                                <td class="no-line text-right">@($"{Model.Price:c2}")</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center no-print">
                                    <a class="btn btn-primary btn-lg" onClick="jQuery('#page-content').print()">
                                        <i class="fa fa-print"></i> Print
                                    </a>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--===================================================-->
<!--End page content-->

@section bottom{
    <script src="/assets/plugins/jquery-print/jQuery.print.js"></script>
}