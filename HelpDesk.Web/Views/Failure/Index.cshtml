@using HelpDesk.BLL.Account

@model List<HelpDesk.Models.ViewModels.FailureViewModel>

@inject MembershipTools _membershipTools

@{
    /**/

    ViewBag.Title = "Arıza Listem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section top{
    <link href="~/assets/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet">
    <link href="~/assets/plugins/datatables/media/css/dataTables.bootstrap.css" rel="stylesheet">
    <link href="~/assets/plugins/datatables/extensions/Responsive/css/dataTables.responsive.css" rel="stylesheet">
    <link href="~/assets/css/demo/jasmine.css" rel="stylesheet">
}

<div class="pageheader hidden-xs">
    <h3><i class="fa fa-briefcase"></i>Arıza Listesi</h3>
</div>
<!--Page content-->
<!--===================================================-->
<div id="page-content">
    <div class="row">
        <div class="col-md-12">

            <!-- Basic Data Tables -->
            <!--===================================================-->
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Arıza Listem</h3>
                </div>
                <div class="panel-body">
                    <table id="demo-dt-basic" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Arıza Adı</th>
                                <th>Ürün Modeli</th>
                                <th>Durumu</th>
                                <th>Atanan Teknisyen</th>
                                <th class="text-center" style="width: 10%;">Ayrıntılar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var data = Model[i];
                                <tr>
                                    <td class="text-center">@(i + 1)</td>
                                    <td>@data.CreatedTime</td>
                                    <td>@data.FailureName</td>
                                    <td>@data.ProductModel</td>
                                    <td>@HelpDesk.BLL.Helpers.EnumHelpers.GetDescription(data.OperationStatus)</td>
                                    <td class="text-center">@(data.TechnicianId == null ? "-" : _membershipTools.GetNameSurname(data.TechnicianId).Result)</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Detail", "Failure", new {id = data.FailureId})" class="btn btn-success">
                                            Ayrıntılar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--===================================================-->
    <!-- End Striped Table -->
</div>

@section bottom
    {
    <script src="~/assets/plugins/datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/plugins/datatables/media/js/dataTables.bootstrap.js"></script>
    <script src="~/assets/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/js/demo/tables-datatables.js"></script>
}
